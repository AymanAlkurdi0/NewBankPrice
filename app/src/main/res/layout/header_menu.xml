<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize">
    <ImageButton android:src="@drawable/ic_menu"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerInside"
        android:id="@+id/menu_header_open_menu"
        android:paddingTop="5dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/menu_header_name_text"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/menu_header_open_menu"
        android:background="?attr/actionBarItemBackground"
        android:paddingTop="5dp"
        android:scaleType="centerInside"
        android:text="currency exchange"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/menu_header_currency_exchange"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_currency_exchange"
        android:paddingTop="5dp"
        android:scaleType="centerInside"
        android:text="currency exchange"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/menu_header_photo_camera" />

    <ImageButton android:src="@drawable/ic_photo_camera_white_24dp"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:id="@+id/menu_header_photo_camera"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true" />



</RelativeLayout>