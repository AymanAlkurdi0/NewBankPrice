<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize"
>

    <ImageButton android:src="@drawable/ic_menu_white_24dp"
        android:background="?attr/actionBarItemBackground"
        android:id="@+id/menu_header_open_menu"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="center"
        android:text="Menu"
        android:scaleX="2"
        android:scaleY="2"
        android:paddingStart="-15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        />


    <TextView
        android:textDirection="firstStrong"
        android:textStyle="bold"
        android:id="@+id/menu_header_name_text"
        android:layout_width="100dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="-1dp"
        android:background="?attr/actionBarItemBackground"
        android:paddingTop="3dp"
        android:scaleType="centerInside"
        android:text="Currency Exchange"
        android:textColor="@color/white"
        android:textSize="18sp"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/menu_header_open_menu" />

    <ImageButton
        android:src="@drawable/ic_photo_camera_white_24dp"
        android:id="@+id/menu_header_photo_camera"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/actionBarItemBackground"
        android:scaleType="centerInside"
        android:text="currency exchange"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/menu_header_currency_refresh" />

    <ImageButton
        android:src="@drawable/ic_refresh_white_24dp"
        android:id="@+id/menu_header_currency_refresh"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/actionBarItemBackground"
        android:scaleType="centerInside"
        android:text="currency exchange"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_toStartOf="@+id/menu_header_currency_exchange"
        />

    <ImageButton
        android:src="@mipmap/ic_currency_exchange"
        android:id="@+id/menu_header_currency_exchange"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>