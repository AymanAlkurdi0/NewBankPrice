<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header_cruncey_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="11dp"
            android:layout_weight="0.05"
            />



        <TextView
            android:textDirection="firstStrong"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:id="@+id/header_cruncey_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="17dp"
            android:text="USA - US Dollar " />

        <TextView
            android:textDirection="firstStrong"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:id="@+id/header_cruncey_buy"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Buy"
            android:textSize="20dp" />

        <TextView
            android:textDirection="firstStrong"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:id="@+id/header_cruncey_sell"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Sell"
            android:textSize="20dp" />

        <Button
            android:id="@+id/header_cruncey_sort_button"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="0.8"
            android:background="@drawable/swap_vert_black_27x27"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>